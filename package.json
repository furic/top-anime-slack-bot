{
    "name": "top-animes-slack-app",
    "version": "1.0.0",
    "description": "A Slack bot that shares top airing anime from MyAnimeList",
    "main": "dist/index.js",
    "scripts": {
      "build": "tsc",
      "start": "node dist/index.js",
      "dev": "ts-node src/index.ts",
      "watch": "tsc -w",
      "test": "jest",
      "lint": "eslint . --ext .ts",
      "format": "prettier --write \"src/**/*.ts\""
    },
    "dependencies": {
      "@slack/web-api": "^7.0.2",
      "axios": "^1.6.7",
      "dotenv": "^16.4.5",
      "node-schedule": "^2.1.1"
    },
    "devDependencies": {
      "@types/jest": "^29.5.12",
      "@types/node": "^20.11.24",
      "@types/node-schedule": "^2.1.0",
      "@typescript-eslint/eslint-plugin": "^7.1.1",
      "@typescript-eslint/parser": "^7.1.1",
      "eslint": "^8.57.0",
      "jest": "^29.7.0",
      "prettier": "^3.2.5",
      "ts-jest": "^29.1.2",
      "ts-node": "^10.9.2",
      "typescript": "^5.3.3"
    }
  }